    <style name="BvActionOverflowButtonStyle" parent="@android:style/Widget.Material.Light.ActionButton.Overflow" tools:targetApi="21">
        <item name="android:src">@drawable/bv_ic_more_point</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="BvActionOverflowMenuStyle" parent="@android:style/Widget.Material.Light.PopupMenu.Overflow" tools:targetApi="21">
        <item name="android:popupBackground">@drawable/bv_ic_menu_popup_background</item>
        <item name="android:popupElevation">2dp</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:dropDownWidth">110dp</item>
    </style>

    <!--bv zhangjiachu add for bv alarm style BvPreferenceTheme 20200815 start-->
    <style name="BvPreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/BvPrerenceCategoty</item>
        <!--<item name="preferenceFragmentStyle">@style/BvPreferenceFragment</item>-->
        <item name="preferenceFragmentListStyle">@style/BvPreferenceFragmentList</item>
        <item name="preferenceStyle">@style/BvPreference</item>
